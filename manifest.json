{
	"manifest_version": 2,

	"name": "youtube annotator",
	"description": "Store annotations with screen grabs from youtube",
	"version": "1.0",
	"icons": { "128": "icon_128.png" },
	"background": {
		"persistend": false,
		"scripts": ["background.js"]
	},

	"browser_action": {
		"default_icon": "icon.png",
		"defautl_title": "Capture and annotate"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"css": [ "content.css" ]
		}
	],

	"permissions": [
		"tabs",
		"<all_urls>"
	],

	"web_accessible_resources" : ["inject.js", "content.css", "content.html"]
}
